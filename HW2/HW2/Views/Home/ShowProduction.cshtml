@{
}
@model Production[]

<h2 style="background-color: #E5ECEB">Production</h2>
<table class=" table">
    <tr>
        <td>ID</td>
        <td>Name_Product</td>
        <td>Count</td>
        <td>Need_Count</td>

    </tr>
   
    @foreach(var p in Model)
    {
        @if(p.Count == p.Need_Count)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name_Product</td>
                <td style="background-color: green">@p.Count</td>
                <td>@p.Need_Count</td>
            </tr>
        }
        else
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name_Product</td>
                <td style="background-color: red">@p.Count</td>
                <td>@p.Need_Count</td>
            </tr>
        }
    }
</table>